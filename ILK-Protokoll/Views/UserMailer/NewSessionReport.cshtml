@using ILK_Protokoll.Models
@using ILK_Protokoll.util
@model ILK_Protokoll.Areas.Session.Models.ActiveSession
@{
	var report = (SessionReport)ViewBag.Report;
}
<p>Soeben wurde eine Sitzung des Typs &raquo;@report.SessionType.Name&laquo; beendet.</p>

<a href="@ViewBag.Host@Url.Action("Details", "SessionReports", new { id = report.ID, Area = "" })">Sitzungsprotokoll zum Download</a><br />


<h3>Folgende Themen wurden diskutiert:</h3>

<table class="table table-striped table-hover table-sortable">
	<thead>
		<tr>
			<th width="20%">
				Titel
			</th>
			<th width="60%">
				Beschreibung
			</th>
			<th width="10%">
				Erstellt
			</th>
			<th width="10%">
				Aktion / Entscheidung
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (TopicLock item in Model.LockedTopics)
		{
			<tr>
				<td>
					@item.Topic.Title.Shorten(60)
				</td>
				<td>
					@item.Topic.Description.Shorten(150)
				</td>
				<td>
					@item.Topic.Created.ToString("d")
				</td>
				<td>
					@item.Action.DisplayName()
				</td>
			</tr>
		}
	</tbody>
</table>
