@using ILK_Protokoll.Models
@{
	var user = (User)ViewBag.User;
	var assignment = (Assignment)ViewBag.Assignment;
	var name = string.Join(" ", user.LongName.Split(',').Reverse()).Trim();
}
<p>Eine ihrer Aufgaben ist seit dem <b>@assignment.DueDate.ToString("d")</b> überfällig.</p>

<a href="@Url.Action("Details", "Assignments", new { id = assignment.ID }, "http")">Detailseite</a><br />
<p>
	<a href="@Url.Action("MarkAsDone", "Assignments", new { id = assignment.ID }, "http")">Als erledigt kennzeichnen</a>
</p>

<h3>@assignment.Title</h3>
<div>
	<dl class="dl-horizontal">
		<dt>
			Besitzer:
		</dt>
		<dd>
			@name
		</dd>

		<dt>
			Diskussion:
		</dt>
		<dd>
			<a href="@Url.Action("Details", "Topics", new { id = assignment.Topic.ID }, "http")">@assignment.Topic.Title</a>
		</dd>

		<dt>
			Typ:
		</dt>
		<dd>
			@assignment.Type
		</dd>

		<dt>
			Beschreibung:
		</dt>
		<dd>
			@assignment.Description
		</dd>
	</dl>
</div>