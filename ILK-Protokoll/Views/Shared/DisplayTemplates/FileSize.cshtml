@model int
@{
	string[] suffixArray = { "Byte", "KB", "MB", "GB", "TB" };
	int magnitude = Model == 0 ? 0 : (int)Math.Log(Model, 1000);
	var suffix = suffixArray[magnitude];
	var displaynumber = Model / Math.Pow(1000, magnitude);
	var formatstring = displaynumber < 10 ? "{0:0.0}{1}{2}" : "{0:0}{1}{2}";
	var displaystring = string.Format(formatstring, displaynumber, '\xA0', suffix);
}
<filesize bytes="@Model">@displaystring</filesize>