@model ILK_Protokoll.Models.Comment

@using (Ajax.BeginForm("_Submit", "Comments", new AjaxOptions() { UpdateTargetId = "comments_" + Model.TopicID }))
{
	@Html.AntiForgeryToken()
	@Html.HiddenFor(model => model.TopicID)

	<div class="input-group">
		<span class="input-group-addon">@User.Identity.Name.Split('\\').Last()</span>				
		<input type="text" name="Content" class="form-control" placeholder="Kommentar hinzufügen">
	</div>
}
