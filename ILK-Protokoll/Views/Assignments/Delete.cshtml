<div>
	<dl class="dl-horizontal">
		<dt>@Html.DisplayNameFor(model => model.Title)</dt>
		<dd>
			@Html.DisplayFor(model => model.Title)
		</dd>

		<dt>@Html.DisplayNameFor(model => model.OwnerID)</dt>
