@model ILK_Protokoll.Areas.Session.Models.Lists.Opening
@using (Ajax.BeginForm("_Create", "LOpenings", new {Area = "Session"}, new AjaxOptions
{
	HttpMethod = "POST",
	OnSuccess = "AddRow('opening', data);",
	OnFailure = "DisplayErrorMessage('#opening_table', error + '\\n' + xhr.responseText);"
}, new {id = "opening_form"}))
{
	@Html.AntiForgeryToken()
	<tr id="opening_createform">
		<td>
			@Html.EditorFor(model => model.Project, new {htmlAttributes = new {@class = "form-control"}})
		</td>
		<td>
			@Html.EditorFor(model => model.Start, new {htmlAttributes = new {@class = "form-control"}})
		</td>
		<td>
			@Html.EditorFor(model => model.TG, new {htmlAttributes = new {@class = "form-control"}})
		</td>
		<td>
			@Html.EnumDropDownListFor(model => model.Prof, new {@class = "form-control"})
		</td>
		<td>
			@Html.EditorFor(model => model.Description, new {htmlAttributes = new {@class = "form-control"}})
		</td>
		<td>
			<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-check"></span></button>
		</td>
	</tr>
}