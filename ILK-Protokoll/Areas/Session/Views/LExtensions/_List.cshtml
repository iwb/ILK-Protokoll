@using ILK_Protokoll.util
@model IEnumerable<ILK_Protokoll.Areas.Session.Models.Lists.Extension>

<h3>Vertragsverlängerungen</h3>

<table id="extension_table" class="table table-striped table-hover table-sortable">
	<thead>
		<tr>
			<th class="col-sm-2">
				@Html.DisplayNameFor(model => model.Employee)
			</th>
			<th class="col-sm-2">
				@Html.DisplayNameFor(model => model.EndDate)
			</th>
			<th class="col-sm-2">
				@Html.DisplayNameFor(model => model.ExtensionNumber)
			</th>
			<th class="col-sm-4">
				@Html.DisplayNameFor(model => model.Comment)
			</th>
			<th class="col-sm-1">
				@Html.DisplayNameFor(model => model.Approved)
			</th>
			<th class="col-sm-1"></th>
		</tr>
	</thead>
	<tbody id="extension_tbody">
		@foreach (var item in Model)
		{
			Html.RenderPartial("_Row", item);
		}
	</tbody>
	<tfoot>
		@Html.Action("_CreateForm", "LExtensions")
	</tfoot>
</table>

@using (Html.Delayed(null, "List_Utilities"))
{
	<script type="text/javascript" src="~/Scripts/ListUtilities.js"></script>
}