@model ILK_Protokoll.Areas.Session.Models.Lists.Extension
@using (Ajax.BeginForm("_Create", "LExtensions", new { Area = "Session" }, new AjaxOptions
{
	HttpMethod = "POST",
	OnSuccess = "AddRow('extension', data);",
	OnFailure = "DisplayErrorMessage('#extension_table', '<br />' + xhr.responseText);"
}, new { id = "extension_form" }))
{
	@Html.AntiForgeryToken()
	<tr id="extension_createform">
		<td>
			@Html.EditorFor(model => model.Employee, new {htmlAttributes = new {@class = "form-control"}})
		</td>
		<td>
			@Html.EditorFor(model => model.EndDate, new {htmlAttributes = new {@class = "form-control"}})
		</td>
		<td>
			@Html.EditorFor(model => model.ExtensionNumber, new {htmlAttributes = new {@class = "form-control"}})
		</td>
		<td>
			@Html.EditorFor(model => model.Comment, new {htmlAttributes = new {@class = "form-control"}})
		</td>
		<td>
			@Html.EditorFor(model => model.Approved, new {htmlAttributes = new {@class = "form-control"}})
		</td>
		<td>
			<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-check"></span></button>
		</td>
	</tr>
}