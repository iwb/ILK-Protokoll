@model ILK_Protokoll.Areas.Session.Models.Lists.ProfHoliday

<tr id="profHoliday_@Model.ID">
	<td colspan="4">
		@using (Ajax.BeginForm("_Edit", "LProfHolidays", new { Area = "Session" }, new AjaxOptions
	{
		OnSuccess = "ReplaceRow('profHoliday', " + Model.ID + ", data);",
		HttpMethod = "POST",
	}, new { @class = "tableform" }))
		{
			@Html.AntiForgeryToken()
			<div class="row">
				<div class="col-sm-3">
					@Html.EditorFor(model => model.Professor, new { htmlAttributes = new { @class = "form-control" } })
				</div>
				<div class="col-sm-3">
					@Html.EditorFor(model => model.Occasion, new { htmlAttributes = new { @class = "form-control" } })
				</div>

				<div class="col-sm-5">
					<div class="col-sm-6">
						@Html.EditorFor(model => model.Start, new { htmlAttributes = new { @class = "form-control" } })
					</div>
					<div class="col-sm-6">
						@Html.EditorFor(model => model.End, new { htmlAttributes = new { @class = "form-control" } })
					</div>
				</div>


				<div class="col-sm-1 actions">
					@Html.HiddenFor(model => model.ID)
					<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-check"></span></button>
					<a data-ajax="true"
						data-ajax-method="POST"
						data-ajax-success="ReplaceRow('profHoliday', @Model.ID, data);"
						href="@Url.Action("_FetchRow", "LProfHolidays", new {Area = "Session", id = Model.ID})">
						<span class="glyphicon glyphicon-remove" title="Bearbeitung abbrechen"></span>
					</a>
				</div>
			</div>
		}
	</td>
</tr>