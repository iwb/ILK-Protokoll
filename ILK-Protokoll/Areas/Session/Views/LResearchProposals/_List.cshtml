@using ILK_Protokoll.util
@model IEnumerable<ILK_Protokoll.Areas.Session.Models.Lists.ResearchProposal>

@{
    string tableclass = ViewBag.Reporting ? "table-responsive" : null;
}

<div class="panel panel-primary">
    <div class="panel-heading panel-collapse-heading" style="position: relative;">
        <h3 class="panel-title">
            <a data-toggle="collapse" data-target="#researchProposal_table_container">
                Forschungsanträge
                <span class="divlink"></span>
            </a>
        </h3>
    </div>
    <div class="panel-collapse collapse in @tableclass" id="researchProposal_table_container">
        <table id="researchProposal_table" class="table table-striped table-hover table-sortable table-condensed">
            <thead>
                <tr>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Sponsor)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Akronym)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DueDate)
                    </th>
                    <th class="col-sm-1">
                        @Html.DisplayNameFor(model => model.Ilk)
                    </th>
                    <th class="col-sm-1">
                        @Html.DisplayNameFor(model => model.Employee)
                    </th>
                    <th class="col-sm-1">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    @if (!ViewBag.Reporting)
                    {
                        <th class="col-sm-1"></th>
                    }
                </tr>
            </thead>
            <tbody id="researchProposal_tbody">
                @foreach (var item in Model)
                {
                    Html.RenderPartial("_Row", item);
                }
            </tbody>
            <tfoot>
                @Html.Action("_CreateForm", "LResearchProposals")
            </tfoot>
        </table>
    </div>
</div>

@using (Html.Delayed(null, "List_Utilities"))
{
    <script type="text/javascript" src="~/Scripts/ListUtilities.js"></script>
}
