@model ILK_Protokoll.Areas.Session.Models.Lists.Event

<tr id="event_createform">
	<td colspan="7">
		@using (Ajax.BeginForm("_Create", "LEvents", new {Area = "Session"}, new AjaxOptions
		{
			HttpMethod = "POST",
			OnSuccess = "AddRow('event', data);",
			OnFailure = "DisplayErrorMessage('#event_table', '<br />' + xhr.responseText);"
		}, new {@class = "tableform", id = "event_form"}))
		{
			@Html.AntiForgeryToken()
			<div class="row">
				<div class="col-sm-2">
					@Html.EditorFor(model => model.StartDate, new {htmlAttributes = new {@class = "form-control", id = "evt_create_start"}})
				</div>
				<div class="col-sm-2">
					@Html.EditorFor(model => model.EndDate, new {htmlAttributes = new {@class = "form-control", id = "evt_create_end"}})
				</div>
				<div class="col-sm-1">
					@Html.EditorFor(model => model.Time, new {htmlAttributes = new {@class = "form-control", id = "evt_create_time"}})
				</div>
				<div class="col-sm-1">
					@Html.EditorFor(model => model.Place, new {htmlAttributes = new {@class = "form-control", id = "evt_create_place"}})
				</div>
				<div class="col-sm-4">
					@Html.EditorFor(model => model.Description, new {htmlAttributes = new {@class = "form-control", id = "evt_create_desc"}})
				</div>
				<div class="col-sm-1">
					@Html.EditorFor(model => model.Organizer, new {htmlAttributes = new {@class = "form-control", id = "evt_create_orga"}})
				</div>
				<div class="col-sm-1">
					<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-check"></span></button>
				</div>
			</div>
		}
	</td>
</tr>