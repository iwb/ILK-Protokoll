@model ILK_Protokoll.Areas.Session.Models.Lists.Event
@{
	string trclass = Model.Created > ViewBag.LastSession ? "newlistitem" : null;
}

<tr class="@trclass" id="event_@Model.ID">
	<td>
		@Model.StartDate.ToString("d")
	</td>
	<td>
		@Model.EndDate.ToString("d")
	</td>
	<td>
		@Html.DisplayFor(model => model.Time)
	</td>
	<td>
		@Html.DisplayFor(model => model.Place)
	</td>
	<td>
		@Html.DisplayFor(model => model.Description)
	</td>
	<td>
		@Html.DisplayFor(model => model.Organizer)
	</td>
	@if (!ViewBag.Reporting)
	{
		<td class="actions">
			<a href="@Url.Action("Download", "LEvents", new {Area = "Session", id = Model.ID})">
				<span class="glyphicon glyphicon-download" title="Termin herunterladen"></span>
			</a>

			<a data-ajax="true"
			   data-ajax-method="POST"
			   data-ajax-success="ReplaceRow('event', @Model.ID, data);"
			   href="@Url.Action("_BeginEdit", "LEvents", new {Area = "Session", id = Model.ID})">
				<span class="glyphicon glyphicon-edit" title="Termin bearbeiten"></span>
			</a>

			<a data-ajax="true"
			   data-ajax-method="POST"
			   data-ajax-confirm="Termin wirklich löschen?"
			   data-ajax-success="RemoveRow('event', @Model.ID);"
			   href="@Url.Action("_Delete", "LEvents", new {Area = "Session", id = Model.ID})">
				<span class="glyphicon glyphicon-remove" title="Termin löschen"></span>
			</a>
		</td>
	}
</tr>