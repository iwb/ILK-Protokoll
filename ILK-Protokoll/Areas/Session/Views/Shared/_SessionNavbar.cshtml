}
<div class="navbar navbar-default navbar-secondary navbar-fixed-top nav-justified">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#secondaryNavbarContent">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<p class="navbar-brand">Laufende Sitzung</p>
		</div>

		<div class="navbar-collapse collapse" id="secondaryNavbarContent">
			<ul class="nav navbar-nav">
				<li class="@ViewBag.SMasterStyle">@Html.ActionLink("Stammdaten", "Edit", "Master", new {Area = "Session"}, null)</li>
				<li class="@ViewBag.SListsStyle">@Html.ActionLink("Listen", "Index", "Lists", new {Area = "Session"}, null)</li>
				<li class="@ViewBag.SDiscussionStyle">@Html.ActionLink("Diskussion", "Index", "Discussion", new {Area = "Session"}, null)</li>
				<li class="@ViewBag.SFinalizeStyle">@Html.ActionLink("Beenden", "Index", "Finalize", new {Area = "Session"}, null)</li>
