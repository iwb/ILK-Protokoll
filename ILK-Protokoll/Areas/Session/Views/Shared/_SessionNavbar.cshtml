@using ILK_Protokoll.Areas.Session.Models
@{
	var session = ViewBag.CurrentSession as ActiveSession;
}
<div class="navbar navbar-inverse navbar-fixed-top nav-justified">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<p class="navbar-brand">Laufende Sitzung</p>
		</div>

		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<li class="@ViewBag.SMasterStyle"><a>Stammdaten</a></li>
				<li class="@ViewBag.SListsStyle"><a>Listen</a></li>
				<li class="@ViewBag.SDiscussionStyle"><a>Diskussion</a></li>
				<li class="@ViewBag.SFinalizeStyle"><a>Beenden</a></li>
			</ul>
			
			<p class="navbar-right navbar-text">
				<span class="visible-xs">Eingeloggt als <b>@User.Identity.Name</b></span>
				<span class="hidden-xs usertile">@User.Identity.Name.Split('\\').Last()</span>
			</p>

			@if (session != null)
			{
				<div class="navbar-right navbar-text" style="margin-right: 20px;">
					@session.SessionType.Name
				</div>
			}
		</div>
	</div>
</div>