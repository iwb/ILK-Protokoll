@model ILK_Protokoll.Areas.Session.Models.Lists.IndustryProject

<tr id="industryProject_@Model.ID">
	<td colspan="10">
		@using (Ajax.BeginForm("_Edit", "LIndustryProjects", new { Area = "Session" }, new AjaxOptions
	{
		OnSuccess = "ReplaceRow('industryProject', " + Model.ID + ", data);",
		HttpMethod = "POST",
	}, new { @class = "tableform", id = "indproj_" + Model.ID + "_editform" }))
		{
			@Html.AntiForgeryToken()
			<div class="row">
				<div class="col-sm-1">
					@Html.EditorFor(model => model.Partner, new { htmlAttributes = new { @class = "form-control" , id = "indproj_" + Model.ID + "partner"} })
				</div>
				
				<div class="col-sm-2">
					@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "indproj_" + Model.ID + "name" } })
				</div>				
				<div class="col-sm-2">
					@Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" , id = "indproj_" + Model.ID + "start"} })
				</div>
				<div class="col-sm-2">
					@Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control", id = "indproj_" + Model.ID + "end" } })
				</div>
				<div class="col-sm-1">
					@Html.DropDownListFor(m => m.IlkID, (SelectList)ViewBag.UserList, new {@class = "form-control", id = "indproj_" + Model.ID + "ilk"})
				</div>
				<div class="col-sm-1">
					@Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" , id = "indproj_" + Model.ID + "sum"} })
				</div>
				<div class="col-sm-2">
					@Html.EnumDropDownListFor(model => model.Status, new { @class = "form-control", id = "indproj_create_status" })
				</div>
				<div class="col-sm-1 actions">
					@Html.HiddenFor(model => model.ID)
					<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-check"></span></button>
					<a data-ajax="true"
						data-ajax-method="POST"
						data-ajax-success="ReplaceRow('industryProject', @Model.ID, data);"
						href="@Url.Action("_FetchRow", "LIndustryProjects", new {Area = "Session", id = Model.ID})">
						<span class="glyphicon glyphicon-remove" title="Bearbeitung abbrechen"></span>
					</a>
				</div>
			</div>
		}
	</td>
</tr>