@using ILK_Protokoll.util
@model IEnumerable<ilk_protokoll.areas.session.models.lists.%%classname%%>	
		
@{
	string tableclass = ViewBag.Reporting ? "table-responsive" : null;
}

<div class="panel panel-primary">
	<div class="panel-heading panel-collapse-heading" style="position: relative;">
		<h3 class="panel-title">
			<a data-toggle="collapse" data-target="#%%classname%%_table_container">
				%%CLASSNAME%%
				<span class="divlink"></span>
			</a>
		</h3>
	</div>
	<div class="panel-collapse collapse in @tableclass" id="%%classname%%_table_container">
		<table id="%%classname%%_table" class="table table-striped table-hover table-sortable table-condensed">
			<thead>
				<tr>
					<th class="col-sm-2">
						@Html.DisplayNameFor(model => model.StartDate)
					</th>
					<th class="col-sm-2">
						@Html.DisplayNameFor(model => model.EndDate)
					</th>
					<th class="col-sm-1">
						@Html.DisplayNameFor(model => model.Time)
					</th>
					<th class="col-sm-1">
						@Html.DisplayNameFor(model => model.Place)
					</th>
					<th class="col-sm-4">
						@Html.DisplayNameFor(model => model.Description)
					</th>
					<th class="col-sm-1">
						@Html.DisplayNameFor(model => model.Organizer)
					</th>
					@if(!ViewBag.Reporting)
					{
						<th class="col-sm-1"></th>
					}
				</tr>
			</thead>
			<tbody id="%%classname%%_tbody">
				@foreach (var item in Model)
				{
				Html.RenderPartial("_Row", item);
				}
			</tbody>
			<tfoot>
				@Html.Action("_CreateForm", "L%%CLASSNAME%%s")
			</tfoot>
		</table>
	</div>
</div>

@using (Html.Delayed(null, "List_Utilities"))
{
<script type="text/javascript" src="~/Scripts/ListUtilities.js"></script>
}
