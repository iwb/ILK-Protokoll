@model ILK_Protokoll.Areas.Session.Models.Lists.IlkDay

<tr id="ilkDay_@Model.ID">
	<td colspan="7">
		@using (Ajax.BeginForm("_Edit", "LIlkDays", new {Area = "Session"}, new AjaxOptions
		{
			OnSuccess = "ReplaceRow('ilkDay', " + Model.ID + ", data);",
			HttpMethod = "POST",
		}, new {@class = "tableform"}))
		{
			@Html.AntiForgeryToken()
			<div class="row">
				<div class="col-sm-3">
					<div class="form-inline">
						<div class="form-group">
							<input class="form-control text-box single-line" data-val="true" data-val-date="Das Feld &quot;Beginn&quot; muss eine Datumsangabe sein." data-val-required="Das Feld &quot;Beginn&quot; ist erforderlich." id="ilkDayEdit_Start_date" type="date" value="@Model.Start.ToString("yyyy-MM-dd")" style="width: 155px;">
						</div>
						<div class="form-group">
							<input class="form-control text-box single-line" data-val="true" data-val-date="Das Feld &quot;Beginn&quot; muss eine Zeitangabe sein." data-val-required="Das Feld &quot;Beginn&quot; ist erforderlich." id="ilkDayEdit_Start_time" type="time" value="@Model.Start.ToString("HH:mm")" style="width: 100px;">
						</div>
					</div>
					<div class="form-inline">
						<div class="form-group">
							<input class="form-control text-box single-line" data-val="true" data-val-date="Das Feld &quot;Ende&quot; muss eine Datumsangabe sein." data-val-required="Das Feld &quot;Ende&quot; ist erforderlich." id="ilkDayEdit_End_date" type="date" value="@Model.End.ToString("yyyy-MM-dd")" style="width: 155px;">
						</div>
						<div class="form-group">
							<input class="form-control text-box single-line" data-val="true" data-val-date="Das Feld &quot;Ende&quot; muss eine Zeitangabe sein." data-val-required="Das Feld &quot;Ende&quot; ist erforderlich." id="ilkDayEdit_End_time" type="time" value="@Model.End.ToString("HH:mm")" style="width: 100px;">
						</div>
						<input type="hidden" id="ilkDayEdit_StartDateTime" name="Start" value="@Model.Start.ToString("s")" />
						<input type="hidden" id="ilkDayEdit_EndDateTime" name="End" value="@Model.End.ToString("s")" />

						<script type="text/javascript">
							$('#ilkDayEdit_Start_date, #ilkDayEdit_Start_time').change(function() {
								var dateparts = $('#ilkDayEdit_Start_date')[0].value.split('-');
								var timeparts = $('#ilkDayEdit_Start_time')[0].value.split(':');
								$('#ilkDayEdit_StartDateTime').val(new Date(dateparts[0], dateparts[1] - 1, dateparts[2], timeparts[0], timeparts[1]).toISOString());
							});
							$('#ilkDayEdit_End_date, #ilkDayEdit_End_time').change(function() {
								var dateparts = $('#ilkDayEdit_End_date')[0].value.split('-');
								var timeparts = $('#ilkDayEdit_End_time')[0].value.split(':');
								$('#ilkDayEdit_EndDateTime').val(new Date(dateparts[0], dateparts[1] - 1, dateparts[2], timeparts[0], timeparts[1]).toISOString());
							});
						</script>
					</div>
				</div>

				<div class="col-sm-1">
					@Html.EditorFor(model => model.Place, new {htmlAttributes = new {@class = "form-control"}})
				</div>
				<div class="col-sm-2">
					@Html.DropDownListFor(m => m.SessionTypeID, (SelectList)ViewBag.SessionTypeList, new { @class = "form-control" })
				</div>
				<div class ="col-sm-3">
					@Html.EditorFor(model => model.Topics, new { htmlAttributes = new { @class = "form-control" } })
				</div>
				<div class="col-sm-1">
					@Html.DropDownListFor(m => m.OrganizerID, (SelectList)ViewBag.UserList, new {@class = "form-control"})
				</div>
				<div class="col-sm-1">
					@Html.EditorFor(model => model.Participants, new {htmlAttributes = new {@class = "form-control"}})
				</div>
				<div class="col-sm-1 actions">
					@Html.HiddenFor(model => model.ID)
					<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-check"></span></button>
					<a data-ajax="true"
					   data-ajax-method="POST"
					   data-ajax-success="ReplaceRow('ilkDay', @Model.ID, data);"
					   href="@Url.Action("_FetchRow", "LIlkDays", new {Area = "Session", id = Model.ID})">
						<span class="glyphicon glyphicon-remove" title="Bearbeitung abbrechen"></span>
					</a>
				</div>
			</div>
		}
	</td>
</tr>