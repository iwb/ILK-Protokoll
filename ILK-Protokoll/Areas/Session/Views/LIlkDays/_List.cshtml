@using ILK_Protokoll.util
@model IEnumerable<ILK_Protokoll.Areas.Session.Models.Lists.IlkDay>

@{
	string tableclass = ViewBag.Reporting ? null : "table-responsive";
}

<div class="panel panel-primary">
	<div class="panel-heading panel-collapse-heading" style="position: relative;">
		<h3 class="panel-title">
			<a data-toggle="collapse" data-target="#ilkDay_table_container">
				ILK-Tage
				<span class="divlink"></span>
			</a>
		</h3>
	</div>
	<div class="panel-collapse collapse in @tableclass" id="ilkDay_table_container">
		<table id="ilkDay_table" class="table table-striped table-hover table-sortable table-condensed">
			<thead>
				<tr>
					<th class="col-sm-3">
						@Html.DisplayNameFor(model => model.Start) / @Html.DisplayNameFor(model => model.End)
					</th>
					<th class="col-sm-1">
						@Html.DisplayNameFor(model => model.Place)
					</th>
					<th class="col-sm-2">
						@Html.DisplayNameFor(model => model.SessionType)
					</th>
					<th class="col-sm-3">
						@Html.DisplayNameFor(model => model.Topics)
					</th>
					<th class="col-sm-1">
						@Html.DisplayNameFor(model => model.Organizer)
					</th>
					<th class="col-sm-1">
						@Html.DisplayNameFor(model => model.Participants)
					</th>
					@if (!ViewBag.Reporting)
					{
						<th class="col-sm-1"></th>
					}
				</tr>
			</thead>
			<tbody id="ilkDay_tbody">
				@foreach (var item in Model)
				{
					Html.RenderPartial("_Row", item);
				}
			</tbody>
			<tfoot>
				@if (!ViewBag.Reporting)
				{
					@Html.Action("_CreateForm", "LIlkDays")
				}
			</tfoot>
		</table>
	</div>
</div>

@using (Html.Delayed(null, "List_Utilities"))
{
	<script type="text/javascript" src="~/Scripts/ListUtilities.js"></script>
}