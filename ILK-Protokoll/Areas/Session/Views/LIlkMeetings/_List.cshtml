@using ILK_Protokoll.util
@model IEnumerable<ILK_Protokoll.Areas.Session.Models.Lists.IlkMeeting>

<h3>ILK-Regeltermine</h3>

<table id="ilkMeeting_table" class="table table-striped table-hover table-sortable">
	<thead>
		<tr>
			<th class="col-sm-2">
				@Html.DisplayNameFor(model => model.Start)
			</th>
			<th class="col-sm-2">
				@Html.DisplayNameFor(model => model.Place)
			</th>
			<th class="col-sm-2">
				@Html.DisplayNameFor(model => model.SessionType)
			</th>
			<th class="col-sm-2">
				@Html.DisplayNameFor(model => model.Organizer)
			</th>
			<th class="col-sm-3">
				@Html.DisplayNameFor(model => model.Comments)
			</th>
			<th class="col-sm-1"></th>
		</tr>
	</thead>
	<tbody id="ilkMeeting_tbody">
		@foreach (var item in Model)
		{
			Html.RenderPartial("_Row", item);
		}
	</tbody>
	<tfoot>
		@if (!ViewBag.Reporting)
		{
			@Html.Action("_CreateForm", "LIlkMeetings")
		}
	</tfoot>
</table>

@using (Html.Delayed(null, "List_Utilities"))
{
	<script type="text/javascript" src="~/Scripts/ListUtilities.js"></script>
}