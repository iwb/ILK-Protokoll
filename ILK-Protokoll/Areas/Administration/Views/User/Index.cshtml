@model IEnumerable<ILK_Protokoll.Models.User>

@{
	ViewBag.Title = "Benutzerübersicht";
}
@Html.ActionLink("Benutzer abgleichen", "Sync", null, new { @class = "index-action btn btn-primary" })

<h2>@ViewBag.Title</h2>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ID)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ShortName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.LongName)
			</th>
			<th>@Html.DisplayNameFor(model => model.IsActive)</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ID)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ShortName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LongName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsActive)
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="alert alert-info">Das Flag &quot;Aktiv&quot; gibt Auskunft darüber, ob sich der Benutzer aktuell in der ILK-Gruppe befindet. Es dient nicht zur Zugangsbeschränkung, sondern schränkt die Auswahlmöglichkeit in den Dropdown-Menüs ein. Ruft ein Benutzer das ILK-Protokoll auf, wird er automatisch aktiv gesetzt.</div>